<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>To-Do List</title>
  </head>
  <body>
    <header>
      <h1>My To-Do List</h1>
    </header>
    <main>
      <section class="task-view container">
        <h3>My Tasks</h3>
          <ul id="task-list">
            <% results.forEach(task => { %>              
              <li class="task-item">
                <h4>Task: <%= task.title %></h4>
                <p>Desciption: <%= task.description %></p>
                <p>Contact person: <%= task.contact %></p>
                <p>Completion status: <%= task.status %></p>
                <p>Category: <%= task.category %></p>
                <p>Complete this task by <%= task.due %></p>
              </li>
            <% }) %>
          </ul>
      </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>

    <script src="/public/scripts/index.js" type="text/javascript"></script>
    <script src="/public/scripts/models/task.js" type="text/javascript"></script>
    <script src="/public/scripts/views/task-view.js" type="text/javascript"></script>
    <script src="/public/scripts/views/error-view.js" type="text/javascript"></script>
  </body>
</html>
