<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/public/styles/reset.css">
  <link rel="stylesheet" href="/public/styles/icons.css">
  <link rel="stylesheet" href="/public/styles/base.css">
  <link rel="stylesheet" href="/public/styles/layout.css">
  <link rel="stylesheet" href="/public/styles/modules.css">
</head>
<body>
  <header>
    <div class="header-content">
      <a href="/"><img src="http://www.bootcamps.in/wp-content/uploads/2015/06/code-fellows-shield.png" alt="logo"></a>
      <h1>Code Fellows Books</h1>
    </div>
  </header>
  <main>
    <section class="book-view container">
      <h2 class="view-title">My Books</h2>
      <section class="book-list">
        <ul id="book-list">
          <% results.forEach(book => { %>
            <li class="book-items" data-bookid={{book_id}}>
                <div class="book-container">
                  <img src={{image_url}}>
                  <div class="book-overlay">
                    <h3><%= book.title %></h3>
                    <p><%= book.author %></p>
                  </div>
                </div>
              </li>
          <% }) %>
        </ul>
      </section>
    </section>
  </main>
  <footer>
    <aside class="social-links">
      <ul>
        <li><i class="icon-mail2"><a href=""></a></i></li>
        <li><i class="icon-twitter"><a href=""></a></i></li>
        <li><i class="icon-github"><a href=""></a></i></li>
        <li><i class="icon-linkedin2"><a href=""></a></i></li>
      </ul>
    </aside>
  </footer>
  <!-- External CDN Resources -->
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>

  <!-- Application Resources -->
  <script src="/public/scripts/index.js" type="text/javascript"></script>
  <script src="/public/scripts/models/book.js" type="text/javascript"></script>
  <script src="/public/scripts/views/book-view.js" type="text/javascript"></script>
  <script src="/public/scripts/views/error-view.js" type="text/javascript"></script>
</body>
</html>
