<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <main>
      <section class="book-view container">
        <h2 class="view-title">My Books</h2>
        <section class="book-list">
          <ul id="book-list">
            <% books.forEach(book => { %>
              <li class="book-items" data-book-id="<%= book.id %>">
                <div class="book-container">
                  <img src=<%= book.image_url %>>
                  <div class="book-overlay">
                    <h3><%= book.title %></h3>
                    <p><%= book.author %></p>
                    <p class="detail-button"><a href="/books/<%= book.id %>">View Details</a></p>
                  </div>
                </div>
              </li>
            <% }) %>
          </ul>
        </section>
      </section>
    </main>
    <% include ./partials/footer %>
  </body>
</html>
