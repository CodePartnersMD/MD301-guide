<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/header %>
    <main>
      <section class="create-view container">
        <h2 class="view-title">add a new book</h2>
        <form id="create-form" action="/api/v1/books/add" method="post">
          <input type="text" name="title" placeholder="title">
          <input type="text" name="author" placeholder="author">
          <input type="text" name="isbn" placeholder="isbn">
          <input type="text" name="image_url" placeholder="image_url">
          <textarea name="description" placeholder="description" cols="30" rows="5"></textarea>
          <button type="submit">submit</button>
        </form>
      </section>
    </main>
    <% include ../partials/footer %>

    <!-- External CDN Resources -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <!-- Application Resources -->
    <script src="/scripts/index.js" type="text/javascript"></script>
    <script src="/scripts/models/book.js" type="text/javascript"></script>
  </body>
</html>
