<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <% include ../../partials/header %>
    <main>
      <% if(message) { %>
        <h2><%= message %></h2>
      <% } %>
      <h3><%= book.title %></h3>
      <div class="book-details">
        <p><%= book.author %></p>
        <p><%= book.isbn %></p>
      </div>
      <img src="<%= book.image_url %>">
      <p><%= book.description %></p>
    </main>
    <% include ../../partials/footer %>
  </body>
</html>
