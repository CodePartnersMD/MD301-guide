<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <% include ../../partials/header %>
    <main>
      <h2 class="view-title">My Books</h2>
      <ul id="results-list">
        <% results.forEach(book => { %>
          <li class="results-items" data-book-id="<%= book.isbn %>">
            <section class="results-container">
              <img src=<%= book.image_url %>>
              <section class="book-overlay">
                <h3><%= book.title %></h3>
                <p><%= book.author %></p>
                <img src="<%= book.image_url %>">
                <p><%= book.description %></p>        
              </section>
            </section>
            <form id="hide-me" action="/books" method="post">
              <input type="text" name="title" value="<%= book.title %>">
              <input type="text" name="author" value="<%= book.author %>">
              <input type="text" name="isbn" value="<%= book.isbn %>">
              <input type="text" name="image_url" value="<%= book.image_url %>">
              <textarea name="description" value="<%= book.description %>" cols="30" rows="5"></textarea>
              <button id="show-me" type="submit">Add to Database</button>
            </form>
          </li>
        <% }) %>
      </ul>
    </main>
    <% include ../../partials/footer %>
  </body>
</html>
