<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/head %>
</head>
<body>
  <% include ./partials/header %>
  <main>
    <section class="book-view container">
      <h2 class="view-title">My Books</h2>
      <section class="book-list">
        <ul id="book-list">
          <% books.forEach(book => { %>
            <!-- TODO: change book_id to id -->
            <!-- TODO: book-id and add quotes -->
            <li class="book-items" data-book-id="<%= book.book_id %>">
              <div class="book-container">
                <img src=<%= book.image_url %>>
                <div class="book-overlay">
                  <h3><%= book.title %></h3>
                  <p><%= book.author %></p>
                  <p class="detail-button"><a href="/books/<%= book.book_id %>">view details</a></p>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>
      </section>
    </section>
  </main>
  <% include ./partials/footer %>

  <!-- External CDN Resources -->
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

  <!-- Application Resources -->
  <script src="/scripts/index.js" type="text/javascript"></script>
  <script src="/scripts/models/book.js" type="text/javascript"></script>
</body>
</html>
